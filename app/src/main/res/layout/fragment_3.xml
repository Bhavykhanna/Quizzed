<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    tools:context=".Fragment3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="#99BEFF"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView2"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="275dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_horizontal"
            android:text="Total Questions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/toalquestions1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="10"
            style="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="177dp"
            android:gravity="center_horizontal"
            android:text="Quiz Title"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Name"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="375dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/toalquestions1" />

        <TextView
            android:id="@+id/quesution_text"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="1. What is the correct one of these following :-"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Button
            android:id="@+id/option1_text"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="@+id/quesution_text"
            app:layout_constraintStart_toStartOf="@+id/quesution_text"
            app:layout_constraintTop_toBottomOf="@+id/quesution_text" />

        <Button
            android:id="@+id/option2_text"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="@+id/option1_text"
            app:layout_constraintStart_toStartOf="@+id/option1_text"
            app:layout_constraintTop_toBottomOf="@+id/option1_text" />

        <Button
            android:id="@+id/option3_text"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="@+id/option2_text"
            app:layout_constraintStart_toStartOf="@+id/option2_text"
            app:layout_constraintTop_toBottomOf="@+id/option2_text" />

        <Button
            android:id="@+id/option4_text"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="@+id/option3_text"
            app:layout_constraintStart_toStartOf="@+id/option3_text"
            app:layout_constraintTop_toBottomOf="@+id/option3_text" />

        <Button
            android:id="@+id/submit_butt"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/option4_text"
            app:layout_constraintStart_toStartOf="@+id/option4_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>